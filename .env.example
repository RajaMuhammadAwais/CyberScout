# OSINT Reconnaissance Tool - Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# API KEYS (Optional - tool works without them but with limited functionality)
# =============================================================================

# Google Custom Search API (for enhanced Google dorking)
# Get from: https://developers.google.com/custom-search/v1/introduction
GOOGLE_API_KEY=
GOOGLE_CSE_ID=

# Have I Been Pwned API (for breach checking)
# Get from: https://haveibeenpwned.com/API/Key
HIBP_API_KEY=

# Twitter/X API (for social media reconnaissance)
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=
TWITTER_API_KEY=
TWITTER_API_SECRET=

# LinkedIn Session (for professional network intelligence)
# Advanced users: Extract from browser session
LINKEDIN_SESSION=

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Rate limiting (requests per second)
RATE_LIMIT=1.0

# Request timeout (seconds)
TIMEOUT=30

# Maximum concurrent requests
MAX_CONCURRENT=10

# =============================================================================
# DNS CONFIGURATION
# =============================================================================

# Custom DNS servers (comma-separated)
# Default: 8.8.8.8,1.1.1.1,208.67.222.222,9.9.9.9
DNS_SERVERS=8.8.8.8,1.1.1.1,208.67.222.222,9.9.9.9

# =============================================================================
# OUTPUT CONFIGURATION
# =============================================================================

# Default output directory
OUTPUT_DIR=./results

# Enable verbose logging
VERBOSE=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable ethical mode (respects robots.txt and rate limits)
ETHICAL_MODE=true

# User agent string for web requests
USER_AGENT=Mozilla/5.0 (compatible; OSINT-Tool/1.0)

# =============================================================================
# WEB INTERFACE CONFIGURATION
# =============================================================================

# Web interface host
WEB_HOST=0.0.0.0

# Web interface port
WEB_PORT=5000

# Enable debug mode (development only)
DEBUG=false